{
  "name": "chatbotapp",
  "version": "1.0.0",
  "description": "Chat bot example",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "nodemon:build": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "author": "Petro Ivankiv",
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,tsx}": [
      "git add"
    ]
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.0",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/hapi__hapi": "^20.0.9",
    "@types/node": "^14.11.2",
    "gts": "^3.1.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "typescript": "^4.0.3"
  }
}
